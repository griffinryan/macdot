#!/bin/bash

# macrice â€” glryan@uw.edu	|	https://griffinryan.com/

# macrice main     set at: /usr/local/bin/macrice
# functions: help, list, formula, cask, apple, dot
# path: /opt/homebrew/Cellar/macrice

# all macrice() functions are set here

function showInfo() {
    # run script for info.sh
    source /opt/homebrew/Cellar/macrice/**/lib/info.sh
}

function displayList() {
    # run script for list.sh
    source /opt/homebrew/Cellar/macrice/**/lib/list.sh
}

function brewFormula() {
    # run script for formula.sh
    source /opt/homebrew/Cellar/macrice/**/lib/formula.sh
}

function brewCask() {
    # run script for cask.sh
    source /opt/homebrew/Cellar/macrice/**/lib/cask.sh
}

function appleConfig() {
    # run Applescript for apple executable
    source /opt/homebrew/Cellar/macrice/**/lib/apple
}

function dotConfig() {
    # run script for dot.sh
    source /opt/homebrew/Cellar/macrice/**/lib/dot.sh
}

function backupConfig() {
    source /opt/homebrew/Cellar/macrice/**/lib/save.sh
}

function uninstallTorpdots() {
    # run script for uninstall.sh
    source /opt/homebrew/Cellar/macrice/**/lib/uninstall.sh
}

function itermConfig() {
    source /opt/homebrew/Cellar/macrice/**/lib/itermconfig.sh
}

# main loop set here
if [[ -z "$1" ]]; then
    # uses info.sh
    showInfo;
elif [[ "$1" == "help" || "$1" == "-h" ]]; then
    showInfo;
elif [[ "$2" == "help" || "$2" == "-h" ]]; then
    showInfo;
fi;

if [[ "$1" == "list" || "$1" == "-l" ]]; then
    # uses list.sh
    displayList;
elif [[ "$1" == "kegs" || "$1" == "keg" ]]; then
    # uses formula.sh
    brewFormula;
elif [[ "$1" == "save" || "$1" == "backup" ]]; then
    # uses save.sh
    backupConfig;
elif [[ "$1" == "iterm" || "$1" == "iterm2"  ]]; then
    # uses itermconfig.sh
    itermConfig;
elif [[ "$1" == "cask" || "$1" == "casks" || "$1" == "-c" ]]; then
    # uses cask.sh
    brewCask;
elif [[ "$1" == "apple" || "$1" == "-a" ]]; then
    # uses apple (executable Applescript)
    appleConfig;
elif [[ "$1" == "dot" || "$1" == "-d" ]]; then
    dotConfig;
fi;

unset showInfo;
unset displayList;
unset brewFormula;
unset brewCask;
unset appleConfig;
unset dotConfig;