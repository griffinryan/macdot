#!/bin/bash

# macdot â€” glryan@uw.edu	|	https://griffinryan.com/

# dotfile backup script

function dotfileRestore() {
    # make a new /.macdot/ folder.
    cd $HOME

    # individually (and recursively) add parent directories.
    /bin/cp -r ~/.macdot/.vim ~/.vim 2>/dev/null
    /bin/cp -r ~/.macdot/.local ~/.local 2>/dev/null
    /bin/cp -r ~/.macdot/.config ~/.config 2>/dev/null
    /bin/cp -r ~/.macdot/.iterm ~/.iterm 2>/dev/null
    /bin/cp -r ~/.macdot/.fonts ~/.fonts 2>/dev/null

    # wildcard * to add all parent files.
    /bin/cp ~/.macdot/.* ~/ 2>/dev/null
}

# Help page for macdot - a macOS configuration tool.
    toilet -d /opt/homebrew/Cellar/macdot/**/fonts -f larry3d 'macdot' | boxes -d parchment | lolcat -p 5
# Install dotfiles to ~/.* from /usr/local/share/torpdots/dotfiles/.*
if [ "$1" == "--force" -o "$1" == "-f" ]; then
    # force dotfileInstall() with -f argument
    dotfileRestore

    # Status message.
    printf "    '\33[1;35mmacdot\33[0m \33[1;33mrestore\33[0m' \33[1;32msuccessfully restored\33[0m dotfiles from \33[1;34m/~/.macdot/\33[0m.\n"
else
    # Status message.
    printf "    This will \33[1;34mrestore existing\33[0m files in the home directory. \33[1;31mAre you sure\33[0m? (y/n) " 
    read
    echo;
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        dotfileRestore
    
        # Status message.
        printf "    '\33[1;35mmacdot\33[0m \33[1;33mrestore\33[0m' \33[1;32msuccessfully restored\33[0m dotfiles from \33[1;34m/~/.macdot/\33[0m.\n\n"
    fi;
fi;
unset dotfileRestore
